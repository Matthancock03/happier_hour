<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.parse.happierhour.AddLocationFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Location"
        android:gravity="center"
        android:layout_gravity="center_horizontal|top"
        android:id="@+id/location_Header"
        android:textSize="42dp"
        android:textStyle="bold|italic"
        android:textColor="#dc3333"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name:"
        android:id="@+id/name"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/location_Header"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Address:"
        android:id="@+id/address"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="City/Town:"
        android:id="@+id/city"
        android:layout_below="@+id/address"
        android:layout_alignStart="@+id/address"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="State:"
        android:id="@+id/state"
        android:layout_below="@+id/city"
        android:layout_alignStart="@+id/city"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Country:"
        android:id="@+id/country"
        android:layout_below="@+id/state"
        android:layout_alignStart="@+id/state"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_Field"
        android:hint="Enter Location Name"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address_Field"
        android:layout_below="@+id/name_Field"
        android:layout_alignStart="@+id/name_Field"
        android:layout_alignEnd="@+id/name_Field"
        android:hint="Enter Address"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city_Field"
        android:layout_below="@+id/address_Field"
        android:layout_alignStart="@+id/address_Field"
        android:layout_alignEnd="@+id/address_Field"
        android:gravity="center"
        android:hint="Enter City" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/state_Field"
        android:layout_below="@+id/city_Field"
        android:layout_alignStart="@+id/city_Field"
        android:layout_alignEnd="@+id/city_Field"
        android:hint="Enter State"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/country_Field"
        android:layout_below="@+id/state_Field"
        android:layout_alignStart="@+id/state_Field"
        android:layout_alignEnd="@+id/state_Field"
        android:gravity="center"
        android:hint="Enter Country" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add Location"
        android:id="@+id/save_location"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/country_Field"
        android:layout_gravity="center"
        android:background="#dc3333"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="2dp"
        android:layout_alignStart="@+id/country_Field"
        android:layout_alignEnd="@+id/country_Field" />

</RelativeLayout>